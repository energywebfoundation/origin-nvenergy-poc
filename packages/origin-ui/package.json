{
    "private": true,
    "name": "@ptt-origin/origin-ui",
    "version": "1.1.1",
    "scripts": {
        "build": "yarn config-env && node --max-old-space-size=8192 ./node_modules/.bin/webpack --config webpack/prod.config.js",
        "build:containers": "make build",
        "build:ts": "tsc -b tsconfig.json",
        "build:full": "yarn config-env && webpack --config webpack/prod.config.js",
        "lint": "eslint \"src/**/*{.ts,.tsx}\"",
        "lint-fix": "eslint \"src/**/*{.ts,.tsx}\" --fix",
        "config-env": "bash env.sh",
        "start": "yarn config-env && cross-env NODE_OPTIONS=\"--max_old_space_size=8192\" webpack-dev-server --config webpack/dev.config.js --watch",
        "start-all": "yarn start",
        "precommit": "lint-staged",
        "prettier": "prettier --write --config-precedence file-override './src/**/*'",
        "clean": "shx rm -rf dist",
        "deploy:heroku": "make build deploy-heroku"
    },
    "dependencies": {
        "@energyweb/origin-ui-core": "1.9.0",
        "@storybook/addon-knobs": "5.3.19",
        "extract-text-webpack-plugin": "4.0.0-beta.0",
        "file-loader": "6.0.0",
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "ts-loader": "7.0.5",
        "url-loader": "4.1.0",
        "webpack": "4.44.2"
    },
    "devDependencies": {
        "@types/react": "16.9.44",
        "@types/react-dom": "16.9.8",
        "copy-webpack-plugin": "5.1.2",
        "cross-env": "7.0.2",
        "css-loader": "3.6.0",
        "eslint-config-airbnb-base": "14.2.0",
        "eslint-plugin-prettier": "3.1.4",
        "eslint-plugin-react": "7.21.4",
        "fork-ts-checker-webpack-plugin": "4.1.6",
        "html-webpack-plugin": "4.5.0",
        "node-sass": "4.14.1",
        "sass-loader": "8.0.2",
        "source-map-loader": "0.2.4",
        "style-loader": "1.3.0",
        "webpack-cli": "3.3.12",
        "webpack-dev-server": "3.11.0",
        "webpack-merge": "4.2.2"
    }
}
